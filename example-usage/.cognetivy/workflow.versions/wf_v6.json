{
  "workflow_id": "wf_default",
  "version": "v6",
  "nodes": [
    {
      "id": "resource_collect",
      "type": "TASK",
      "contract": {
        "input": ["goal", "scope", "vertical", "founder_constraints"],
        "output": ["qualified_resource_pack"]
      },
      "description": "Collects qualified resources (articles, reports, data) based on the goal, scope, vertical, and founder constraints."
    },
    {
      "id": "generate",
      "type": "TASK",
      "contract": {
        "input": ["qualified_resource_pack", "trends"],
        "output": ["raw_ideas"]
      },
      "description": "Generates raw startup ideas by combining the collected resources with market trends."
    },
    {
      "id": "obviousness_filter",
      "type": "TASK",
      "contract": {
        "input": ["raw_ideas"],
        "output": ["filtered_ideas"]
      },
      "description": "Filters out obvious or over-saturated ideas to focus on more unique opportunities."
    },
    {
      "id": "six_question_score",
      "type": "TASK",
      "contract": {
        "input": ["filtered_ideas"],
        "output": ["scored_ideas"]
      },
      "description": "Scores ideas using the six-question framework to assess viability and potential."
    },
    {
      "id": "hard_filter",
      "type": "TASK",
      "contract": {
        "input": ["scored_ideas"],
        "output": ["shortlist"]
      },
      "description": "Applies hard filters to narrow down to a shortlist of the strongest ideas."
    },
    {
      "id": "challenge",
      "type": "TASK",
      "contract": {
        "input": ["shortlist"],
        "output": ["revised_shortlist", "kill_reasons"]
      },
      "description": "Challenges each shortlisted idea to surface weaknesses and produce a revised shortlist with kill reasons for rejected ideas."
    },
    {
      "id": "synthesize",
      "type": "TASK",
      "contract": {
        "input": ["revised_shortlist", "run_artifacts"],
        "output": ["cheatsheet_synthesis", "top_ideas"]
      },
      "description": "Synthesizes the revised shortlist into a cheatsheet and identifies the top ideas."
    },
    {
      "id": "reflect",
      "type": "TASK",
      "contract": {
        "input": ["top_ideas", "run_artifacts"],
        "output": ["learnings", "workflow_suggestions"]
      },
      "description": "Reflects on the run to extract learnings and suggest workflow improvements."
    }
  ],
  "edges": [
    { "from": "resource_collect", "to": "generate" },
    { "from": "generate", "to": "obviousness_filter" },
    { "from": "obviousness_filter", "to": "six_question_score" },
    { "from": "six_question_score", "to": "hard_filter" },
    { "from": "hard_filter", "to": "challenge" },
    { "from": "challenge", "to": "synthesize" },
    { "from": "synthesize", "to": "reflect" }
  ]
}
