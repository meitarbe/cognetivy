{
  "name": "cognetivy",
  "version": "0.1.6",
  "description": "Reasoning orchestration state: workflow structure, run logs, and versioned mutations",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cognetivy": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && node ./scripts/copy-installer-assets.mjs",
    "prepare": "npm run build",
    "test": "npm run build && node --test test/*.test.mjs",
    "build:studio": "cd ../studio && npm run build && node -e \"require('fs').cpSync(require('path').join(process.cwd(),'dist'), require('path').join(process.cwd(),'../cli/dist/studio'), {recursive:true})\"",
    "build:full": "npm run build && npm run build:studio",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "keywords": [
    "cli",
    "workflow",
    "reasoning",
    "mcp"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/meitarbe/cognetivy.git",
    "directory": "cli"
  },
  "homepage": "https://github.com/meitarbe/cognetivy#readme",
  "bugs": {
    "url": "https://github.com/meitarbe/cognetivy/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "ajv": "^8.18.0",
    "ajv-formats": "^3.0.1",
    "commander": "^12.1.0",
    "env-paths": "^4.0.0",
    "fast-json-patch": "^3.1.1",
    "front-matter": "^4.0.2",
    "open": "^11.0.0",
    "ora": "^9.3.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/pngjs": "^6.0.5",
    "typescript": "^5.7.0"
  },
  "files": [
    "dist",
    "README.md",
    "studio_example.jpg"
  ]
}
